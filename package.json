  },
  "devDependencies": {
    "@types/node": "^9.4.7",
    "fs-extra": "^5.0.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "highlight.js": "^9.12.0",
    "katex": "^0.9.0",
    "laravel-echo": "^1.3.5",
    "markdown-it": "^8.4.1",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-sanitizer": "^0.4.3",
    "twemoji": "^2.5.0"

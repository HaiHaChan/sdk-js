{
  "name": "viblo-sdk",
  "version": "0.1.0",
  "main": "sdk.js",
  "license": "MIT",
  "scripts": {
    "dev": "rimraf dist && tsc -w",
    "compile": "rimraf dist && tsc",
    "build:copy": "node ./scripts/copy-files.js",
